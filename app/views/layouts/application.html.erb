<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/07b646956f.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown" >
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to user_path(current_user.id), class: "navbar-brand" do %>
                  <i class="fas fa-home"></i><span>Home</span>
                <% end %>
              </li>
              <li class="nav-item">
                <a class="navbar-brand" href="/users">
                  <i class="fas fa-users"></i><span>Users</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="navbar-brand" href="/books">
                  <i class="fas fa-book-open"></i><span>Books</span>
                </a>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, class: "navbar-brand", method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i><span>logout</span>
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to root_path , class: 'navbar-brand', data: {"turbolinks" => false} do%>
                  <i class="fas fa-home"></i><span>Home</span>
                <% end %>
              </li>
              <li class="nav-item" data-no-turbolink="true">
                <%= link_to "/home/about",class: "navbar-brand" ,data: {"turbolinks" => false} do %>
                  <i class="fas fa-link"></i><span>About</span>
                <% end %>
              <li class="nav-item" data-no-turbolink="true">
                <%= link_to "/users/sign_up",class: "navbar-brand" ,data: {"turbolinks" => false} do %>
                  <i class="fas fa-user-plus"></i><span>sign up</span>
                <% end %>
              </li>
              <li class="nav-item">
                <a class="navbar-brand" href="/users/sign_in">
                  <i class="fas fa-sign-in-alt"></i><span>login</span>
                </a>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div class="container m-3">
        <div class="row">
          <div class="mx-auto">
      <% if user_signed_in? %>
        <%= form_with(url: search_path, method: :get, local: true) do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, [['User', '1'],['Book', '2']] %>
          <%= f.select :search,[["完全一致","perfect_much"],["前方一致","forward_mach"],["後方一致","backward_mach"],["部分一致","pertical_mach"]] %>
          <%= f.submit '検索'  %>
        <% end %>
      <% end %>
      </div>
      </div>
      </div>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </fotter>
  </body>
</html>
